{
  "name": "mcp-tools-apps",
  "version": "1.0.0",
  "description": "Compilation of small app tools with UI to use through MCP",
  "type": "module",
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "pnpm prepare && tsc",
    "start": "node dist/index.js",
    "dev": "tsx --watch src/index.ts",
    "test": "vitest",
    "prepare": "rm -rf dist",
    "format:check": "prettier --check .",
    "format": "prettier --write .",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "deploy": "wrangler deploy",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "mcp",
    "model context protocol",
    "MCP tools and apps"
  ],
  "author": "Duvan Gallego",
  "license": "MIT",
  "packageManager": "pnpm@10.18.3",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.20.1",
    "express": "^5.1.0",
    "zod": "^3.25.74"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@types/express": "^5.0.1",
    "@types/node": "^24.0.10",
    "@typescript-eslint/eslint-plugin": "^8.35.1",
    "@typescript-eslint/parser": "^8.35.1",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.30.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.1",
    "globals": "^16.3.0",
    "prettier": "^3.6.2",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.35.1",
    "vite": "^7.0.2",
    "vitest": "^3.2.4"
  }
}